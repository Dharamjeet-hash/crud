<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="/app-assets/images/Auth Images/sign in.png" class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form action="/admin/login-submit" method="POST">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="email">Email address</label>
                        <input type="text" id="email" name="email" class="form-control form-control-lg" placeholder="Enter a valid email address" />
                        <% if(errors && errors.email){ %>
                        <label class="invalid-feedback d-block"><%- errors.email %></label>
                        <% } %>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control form-control-lg" placeholder="Enter password" />
                        <i class="fa fa-eye fa-eye-slash eye-open" id="eye-open" aria-hidden="true"></i>
                        <% if(errors && errors.password){ %>
                            <label class="invalid-feedback d-block"><%- errors.password %></label>
                        <% } %>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg w-100" style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>